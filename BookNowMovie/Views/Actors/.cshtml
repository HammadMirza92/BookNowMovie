@model BookNowMovie.Models.Actor
@{
}


<div class="container">
     <table class="table">
         <thead>
             <tr>
                 <th>Profile</th>
                 <th>Name</th>
                 <th>Bio</th>
             </tr>
         </thead>
         <tbody>
             <tr>
                <td><img src="@Model.ProfilePictureUrl" class="actorImg" /></td>
                <td>@Model.FullName</td>
                <td>@Model.Bio</td>
             </tr>
         </tbody>
     </table>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Go Back</a>
</div>