@model BookNowMovie.Models.Producers

<form asp-controller="Producers" asp-action="Edit">
    <div class="form-group" style="display:none">
        <label asp-for="Id" class="form-label"></label>
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProfilePictureUrl" class="form-label" ></label>
        <input asp-for="ProfilePictureUrl" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Bio" class="form-label"></label>
        <input asp-for="Bio" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" />
    </div>
</form>