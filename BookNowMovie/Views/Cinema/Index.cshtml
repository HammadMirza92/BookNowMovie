@{
    ViewData["Title"] = "Cinemas";
}


<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Logo</th>
                <th>Cinemas Name</th>
                <th>Bio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img src="@item.Logo" class="actorImg" />
                    </td>
                    <td class="align-middle">
                        <p>@item.Name</p>
                    </td>
                    <td class="align-middle">
                        <p>@item.Description</p>
                    </td>

                    <td class="align-middle">
                        <a class="btn btn-primary actionBtn"> <i class="fa fa-edit actionBtnIcon"></i> Edit</a>
                        <a class="btn btn-warning actionBtn"> <i class="fa fa-info actionBtnIcon"></i> Detail</a>
                        <a class="btn btn-danger actionBtn"> <i class="fa fa-trash actionBtnIcon"></i> Delete</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>